<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current Price</th>
            <% if @user.id == current_user.id %>
                <th>Actions</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @stocks.each do |stock| %>
            <tr>
                <th><%= stock.name %></th>
                <th><%= stock.ticker %></th>
                <th><%= stock.last_price %></th>
                <% if @user.id == current_user.id %>
                    <th><%= link_to "Remove stock", user_stock_path(stock), 
                                    class: "btn btn-xs btn-danger", 
                                    method: :delete, 
                                    data: { confirm: "Are you sure?" } %></th>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>